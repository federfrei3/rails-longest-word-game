<h1>New Game</h1>
<p><%= @letters %></p>
<p>What is the longest word you can find?</p>
<form novalidate="novalidate" class="simple_form search" action="/score" accept-charset="UTF-8" method="post"><input name="utf8" type="hidden" value="&#x2713;" />
  <div class="search-form-control form-group">
    <input class="form-control string required" type="text" name="input" id="search_query" />
    <button name="button" type="submit" class="btn btn-flat">
      <i class="fas fa-search"></i> Play
    </button>
  </div>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letter, @letters %>
</form>
